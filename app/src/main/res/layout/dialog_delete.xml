<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="305dp"
        android:layout_height="164dp"
        android:layout_gravity="center"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_dialog_ident_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="45dp"
            android:text="确定要删除该业务员吗？"
            android:textColor="#FF081E3C"
            android:textSize="17sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="50dp"
            android:background="#FFE9E9E9"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#FF8C97AF"
                android:textSize="15sp"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#FFE9E9E9"
                />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#FFFF770E"
                android:textSize="15sp"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_dialog_shut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:src="@mipmap/ic_shut_down"/>
    </FrameLayout>
</LinearLayout>
